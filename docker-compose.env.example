# Docker Compose Environment Variables Example
# Copy this file to .env and fill in your values
# Then use: docker-compose --env-file .env up -d

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Production

# Port Configuration (optional, default is 8080)
# Uncomment to change the port. Example: port 7016 matches launchSettings.json for local development
# ASPNETCORE_URLS=http://+:7016
# IMPORTANT: Also update the ports section in docker-compose.yml to "7016:7016" (host:container must match)

# Database Connection
CONNECTION_STRING=your_supabase_connection_string_here

# Encryption Key (base64-encoded, 64 characters)
ENCRYPT_KEY=abcdefghijklmnopqrstuvwxyz1234567890ABCDEFG=

# JWT Configuration
JWT_KEY=your_strong_secret_jwt_key_here
JWT_ISSUER=TuneMates
JWT_AUDIENCE=TuneMatesUsers
JWT_EXPIRES_MINUTES=180

# Cleanup Service Intervals (in hours)
CLEANUP_TOKEN_HOURS=3
CLEANUP_PROPOSAL_HOURS=3
CLEANUP_ROOM_HOURS=24
CLEANUP_SPOTIFY_STATE_HOURS=3

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:5173","https://localhost:5173"
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (requests per minute)
RATE_LIMIT_GLOBAL=0
RATE_LIMIT_SEARCH=30
RATE_LIMIT_MUTATION=10

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=your_redirect_uri

# Logging Configuration
LOGGING_LEVEL=Information
LOGGING_ASPNETCORE_LEVEL=Warning

# Allowed Hosts
ALLOWED_HOSTS=*
